type Block {
  id: ID! @id
  number: Int! 
  hash: String! @unique
  parentHash: String! @unique
  baseFeePerGas: Int
  nonce: String!
  sha3Uncles: String
  logsBloom: String
  transactionRoot: String
  stateRoot: String
  miner: String!
  difficulty: String!
  totalDifficulty: String!
  extraData: String
  size: Int
  gasLimit: Int
  gasUsed: Int
  timestamp: Int!
  transactions: [Transaction] 
  uncles: [String] @scalarList(strategy: RELATION)
}

type Transaction {
  id: ID! @id
  hash: String! 
  nonce: Int!
  blockHash: String!
  blockNumber: Int!
  transactionIndex: Int!
  from: String
  to: String
  value: String
  gasPrice: String
  gas: Int
  input: String
}

